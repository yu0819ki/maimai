<article>
  {{# header }}
  <header class="{{ class }}">
    {{# title }}
    <h1>{{ title }}</h1>
    {{/ title}}
    {{# description }}
    <p>{{ description }}</p>
    {{/ description }}
  </header>
  {{/ header }}

  {{# section }}
  <section class="{{ class }}">
    {{# headline }}
    <h2 class="js-md">{{ headline }}</h2>
    {{/ headline }}
    {{# body }}
    <p class="js-md">{{ body }}</p>
    {{/ body }}
  </section>
  {{/ section }}

  {{# footer }}
  <footer class="{{ class }}">
    {{# headline }}
    <h3>{{ headline }}</h3>
    {{/ headline }}
    {{# body }}
    <p>{{ body }}</p>
    {{/ body }}
  </footer>
  {{/ footer }}
</article>

{{# relation.aside }}
<aside class="{{ class }}">
  {{# title }}
  <h3>{{ title }}</h3>
  {{/ title}}
  {{# description }}
  <p class="js-md">{{ description }}</p>
  {{/ description }}
</aside>
{{/ relation.aside }}
